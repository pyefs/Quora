<div class="pye2 bg-dark">
  <%= @qs.title.upcase %>
  <br>
  <div class="pye4">
    <b>Posted on </b><u><%= @qs.created_at %></u><b> under</b> "<u><%= @qs.category %></u>".
  </div>
  <div class="pye">
    "<%= @qs.content %>"
  </div>
  <br>
  <br>
  Post An Answer
  <form class="pye7" action="/answer?id=<%= session['id'] %>" method="post">
    <textarea class="txtarea" cols="40" rows="10" name="ans[content]" placeholder="Write your answer. You can include basic HTML like <br>, <b>, <u>, <i>."></textarea>
    <br>
    <button class="button1 bg-dark" type="submit" name="ans[id]" value="<%= session['id'] %>">Submit</button>
    <a href="/"><input class="button1 bg-dark" type="button" value="Cancel"></a>
  </form>
</div>
<br><br>
